<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.rabbitmq.amqp1" level="warn" />
    <logger name="com.rabbitmq.amqp1.impl.EntityRecovery" level="warn" />
    <logger name="com.rabbitmq.amqp1.impl.AmqpConnection" level="warn" />
    <logger name="org.apache.qpid" level="warn" />

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>